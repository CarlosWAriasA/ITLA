<main class="container-fluid">
  {{#if hasMovies}}
    <div class="row">
      {{#each movs as |movie|}}
        {{#if (equal movie.status "active")}}
          <div class="card mt-3 mx-2 p-0" style="width: 17.7rem;">
            <img src="{{movie.imageUrl}}" class="card-img-top" alt="{{movie.name}}" height="350px">
            <div class="card-body">
              <h5 class="card-title fw-bold text-bold">{{movie.name}}</h5>
              <p class="card-text fw-lighter mb-0"><span class="fw-bold text-danger-emphasis">Description: </span>{{movie.description}}
              </p>
              <p class="card-text mb-0 text-danger-emphasis">Genre: <span class="fw-lighter text-dark">{{movie.genre}}</span></p>
              <p class="card-text text-danger-emphasis">Status: <span class="fw-lighter text-dark">{{#if (equal movie.status "active")}}Active{{else}}Inactive{{/if}}</span></p>

              <div class="d-flex gap-3 w-100">
                <a href="movie-edit/{{movie.id}}?edit=true" class="btn btn-primary">Edit</a>
                <form action="/admin/movie-delete" method="post">
                  <input type="hidden" name="MovieID" value="{{movie.id}}" />
                  <button class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        {{else}}
          <div class="card mt-3 mx-2 p-0 inactive" style="width: 17.7rem;">
            <img src="{{movie.imageUrl}}" class="card-img-top" alt="{{movie.name}}" height="350px">
            <div class="card-body">
              <h5 class="card-title fw-bold text-danger">{{movie.name}}</h5>
              <p class="card-text fw-lighter mb-0"><span class="fw-bold text-danger-emphasis">Description: </span>{{movie.description}}
              </p>
              <p class="card-text mb-0 text-danger-emphasis">Genre: <span class="fw-lighter text-black">{{movie.genre}}</span></p>
              <p class="card-text text-danger-emphasis">Status: <span class="fw-lighter text-black">{{#if (equal movie.status
                  "active")}}Active{{else}}Inactive{{/if}}</span></p>
          
              <div class="d-flex gap-3 w-100">
                <a href="movie-edit/{{movie.id}}?edit=true" class="btn btn-primary">Edit</a>
                <form action="/admin/movie-delete" method="post">
                  <input type="hidden" name="MovieID" value="{{movie.id}}" />
                  <button class="btn btn-danger">Delete</button>
                </form>
              </div>
              <div class="text-inactive">INACTIVE</div>
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
  {{else}}
   <h1>No movies found</h1>
  {{/if}}
</main>